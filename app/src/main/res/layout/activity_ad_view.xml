<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".ui.activities.AdActivity.AdViewActivity" android:id="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                    android:id="@+id/ad_photos"
                    android:src="@drawable/ic_image_ad"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            <TextView
                    android:text="@string/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
            <TextView
                    android:id="@+id/title_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_ad"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorPrimary">
            </View>

            <TextView
                    android:text="@string/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
            <TextView
                    android:id="@+id/city_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_place"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorPrimary">
            </View>

            <TextView
                    android:text="@string/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
            <TextView
                    android:id="@+id/about_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_about_ad"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorPrimary">
            </View>


            <TextView
                    android:text="@string/price_ad_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>


            <TextView
                    android:id="@+id/price_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_price"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorPrimary">
            </View>

            <TextView
                    android:text="@string/user_agent_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>


            <TextView
                    android:id="@+id/username_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_username"
                    android:drawableEnd="@drawable/ic_change_user"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>
            <TextView
                    android:id="@+id/user_phone_number_ad"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_telephone"
                    android:drawablePadding="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>

            <Button
                    android:id="@+id/go_to_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:text="@string/go_to_user_ad"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:background="@drawable/button"
                    android:theme="@style/RoundedCornerButton"/>

        </LinearLayout>

        <ProgressBar
                android:id="@+id/progressBar_ad_view"
                android:visibility="invisible"
                android:layout_height="100dp"
                android:layout_width="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>