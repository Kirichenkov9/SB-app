<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:text="Имя"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dip"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    <EditText
            android:id="@+id/change_first_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="10dp"
            android:hint=" Измените имя"
            android:inputType="textShortMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </EditText>

    <TextView
            android:text="Фамилия"
            android:layout_width="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dip"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    <EditText
            android:id="@+id/change_last_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="10dp"
            android:hint=" Измените фамилию"
            android:inputType="textShortMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </EditText>

    <TextView
            android:text="Номер телефона"
            android:layout_width="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dip"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    <EditText
            android:id="@+id/change_tel_number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_telephone"
            android:drawablePadding="10dp"
            android:hint=" Измените номер телефона"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </EditText>

    <TextView
            android:text="О себе"
            android:layout_width="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dip"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    <EditText
            android:id="@+id/change_about"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_about_me"
            android:drawablePadding="10dp"
            android:hint=" Измените информацию о себе"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </EditText>

    <Button
            android:id="@+id/change_user"
            android:text="@string/save_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
</LinearLayout>