<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        tools:keep="@layout/content_user_ad">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_cv"
            style="@style/Base.CardView">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/user_ad_photo"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_image_ad"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_ad_title"
                    android:layout_toEndOf="@+id/user_ad_photo"
                    android:layout_alignParentTop="true"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_ad_city"
                    android:layout_toEndOf="@+id/user_ad_photo"
                    android:layout_below="@+id/user_ad_title"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="italic"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
