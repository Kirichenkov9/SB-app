<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        tools:context=".ui.activities.UserActivity.RegistrationActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/first_name_registration"
                android:layout_marginVertical="20dp"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="10dp"
                android:hint="@string/first_name_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage">
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/last_name_registration"
                android:layout_marginVertical="10dp"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="10dp"
                android:hint="@string/last_name_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage">
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/email_registration"
                android:drawableLeft="@drawable/ic_email"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:hint="@string/email_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress">
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/phone_number_registration"
                android:drawableLeft="@drawable/ic_telephone"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:hint="@string/phone_number_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone">
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/about_registration"
                android:inputType="textMultiLine"
                android:drawableLeft="@drawable/ic_about_me"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:hint="@string/about_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/password_registration"
                android:layout_marginVertical="10dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="@string/password_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword">
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/repeat_password_registration"
                android:layout_marginVertical="10dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="@string/repeat_password_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword">
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/button_registration"
            android:layout_marginVertical="10dp"
            android:text="@string/button_registration"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:theme="@style/RoundedCornerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>